                        <!--Form-->
                        <form method="POST" class="col-lg-8 upform" action="/author/update/<%=author._id%>/<%=author.image%>" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="exampleInputName" class="form-label">Author</label>
                                <input type="text" name="author" value="<%=author.author%>" class="form-control" id="booktitle" required>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputName" class="form-label">Book</label>
                                <input type="text" name="book" value="<%=author.book%>" class="form-control" id="bookauthor" required>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputName" class="form-label">Genre</label>
                                <select name="genre" class="form-control" aria-label="Default select example" id="bookgenre">
                      <option selected value="<%=author.genre%>"><%=author.genre%></option>
                      <option value="Novel">Novel</option>
                      <option value="Fiction">Fiction</option>
                      <option value="Autobiography">Autobiography</option>
                      <option value="Non-fiction">Non-fiction</option>
                      <option value="Short stories">Short stories</option>
                      <option value="Atlases">Atlases</option>
                      <option value="Poetry">Poetry</option>
                      <option value="Article">Article</option>
                      <option value="Dictionary">Dictionary</option>
                      <option value="Biography">Biography</option>
                      <option value="Fantasy">Fantasy</option>
                      <option value="Adventure">Adventure</option>
                      <option value="Ohters">Ohters</option>
                  </select>
                                <div id="emailHelp" class="form-text">eg:- Novel,Autobiography,Fiction,etc.</div>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputName" class="form-label">Image</label>
                                <input type="file" name="image" class="form-control" id="bookimg">
                                <%=author.image%>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputName" class="form-label">About</label>
                                <textarea name="about" class="form-control is-invalid" id="bookabout" placeholder="Write something about this book" required><%=author.about%></textarea>
                            </div>
                            <br>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary" id="up-btn">Update Book</button>
                            </div>
                        </form>
